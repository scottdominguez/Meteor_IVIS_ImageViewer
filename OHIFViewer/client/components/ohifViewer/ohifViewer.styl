@import "{ohif:design}/app"
body>.header
  height:40px
  padding:10px 10px 0
  position:relative!important
  z-index:1!important
  .brand
    display: inline-block
    text-decoration: none
    height:30px
    .logo-text
      display: inline-block
      font-size: 16px
      background: url(/images/study-list-off.svg)
      background-repeat: no-repeat
      background-position: 0px
      padding-left: 20px
      padding-top: 0px
      font-weight: bold
      margin-left: 10px
      text-decoration: none
    .logo-text: hover
      text-decoration: none;
      background: url(/images/study-list-on.svg)
      background-repeat: no-repeat;
      background-position: 0px;
  .header-menu
    .logo-image
      display: inline-block
      
      img
        width:350px
        margin-top:1px
        max-width:100%
        vertical-align:middle
      @media only screen and (max-width:930px)
        img
          width:320px
          margin-top:0px
          max-width:100%
      @media only screen and (max-width:460px)
        img
          width:160px

  &.header-big
    padding-right: $studyListPadding
    height:125px!important
    .brand
      display:none
    .logo-image
      float:left
      img
        width:100%
        height:100%

    .logo-text
      font-size: 30px
    .header-menu
      float:left!important
    .studyListLinkSection
      border: none
      left: 0
      margin: 0
      padding: 0
      position: absolute
      top: 0
