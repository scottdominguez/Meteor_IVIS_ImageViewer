@import "{ohif:design}/app"

$distance = 10px

.toolbarSectionTools
  position: relative
  padding-bottom:5px!important
  flat:left!important
  .toolbarSectionButton>.buttonLabel i.expanded-status
    text-align: center
    transition(all 300ms ease)
    width: 8px
  .toolbarSectionButton.expanded
    &>.buttonLabel i.expanded-status
      transform(rotateX(180deg))

    &>.toolbarSectionDrawerContainer
      opacity: 1
      transform(translateX(-50%) translateY(0) scale(1))

  .toolbarSectionDrawerContainer
    bottom: - $toolbarDrawerHeight
    height: $toolbarDrawerHeight
    left: 50%
    min-width: 50%
    opacity: 0
    padding-top: $distance
    position: absolute
    transform(translateX(-50%) translateY( - ($toolbarDrawerHeight + $distance)) scale(0))
    white-space: nowrap
    z-index: 1
    .toolbarSectionDrawer
      theme('background', '$uiGrayDarkest', 0.95)
      theme('border', '2px solid $uiBorderColor', 0.95)
      border-radius: 7px
      theme('color', '$textPrimaryColor')
      content: ''
      display: block
      font-size: 18px
      height: $toolbarDrawerHeight
      padding-top: 6px
      text-align: center
      width: 100%

      #length, #annotate, #magnify, #layout, #toggleShareDialog, #export_file, #toggleReportDialog, #toggleCineDialog, #overlay, #resetViewport, #clearTools, #abdomen, #brain, #bone, #lung ,.seperator,#draw
        display: none
  #filter #abdomen,
  #filter #brain,
  #filter #bone,
  #filter #lung
    display: inline-block

@media (min-width:961px) {
  .toolbarSection .toolbarSectionTools {
    float:right!important;
    margin-top: 0px !important;
  }  
}