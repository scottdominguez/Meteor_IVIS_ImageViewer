@require '{ohif:design}/app'

#shareDialog
  background:transparent
  cursor: move
  overflow: hidden
  padding: 0
  position: absolute
  border: none   	
  z-index: 1000
  .modal-dialog
  	margin:0 0;
  .image-preview
    display: table
    margin: 0 auto

    h3
      white-space: nowrap

  .viewport-preview
    max-width: 512px
    max-height: 512px

#vimageshareOK, #vimageshareOK:hover {
  text-decoration: none;
  cursor: pointer;
  font-size: 15px;
  font-weight: 600;
}
